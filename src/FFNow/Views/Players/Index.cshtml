@model IEnumerable<FFNow.Models.Player>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>Players Menu</h2>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Team)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var player in Model) {
        <tr>
            <td>
                <a asp-action="DetailsFromIndex" asp-route-id="@player.Id">@Html.DisplayFor(modelItem => player.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => player.Position)
            </td>
            <td>
                @Html.DisplayFor(modelItem => player.Team)
            </td>
        </tr>
}
    </tbody>
</table>